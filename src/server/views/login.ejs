<html>
  <head>
    <meta charset="utf-8">
    <title>Login</title>
    <link rel="stylesheet" href="ext/semantic-ui/semantic.min.css" />
    <link rel="stylesheet" href="global/style.css">
    <link rel="stylesheet" href="views/login/style.css">
  </head>
  <body>


    <div class="loginform">
      <div class="ui middle aligned center aligned grid">
        <div class="column">
          <h2 class="ui image orange header">
          </h2>
          <form class="ui large form">
            <div class="ui stacked segment">
              <div class="field">
                <div class="ui left icon input">
                  <i class="user icon"></i>
                  <input type="text" name="email" placeholder="E-Mail Adresse eingeben" id="email">
                </div>
              </div>
              <div class="field">
                <div class="ui left icon input">
                  <i class="lock icon"></i>
                  <input type="password" name="password" placeholder="Passwort eingeben" id="password">
                </div>
              </div>
              <button class="ui fluid large orange submit button">Login</button>
            </div>

            <div class="ui error message"></div>

          </form>

          <div class="ui message">
            Keinen Account? <a href="#">Einladung anfordern</a>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.9/semantic.min.js"></script>
    <script src="/global/script.js"></script>
    <script src="/views/login/script.js"></script>
  </body>
</html>
